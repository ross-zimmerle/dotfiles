[init]
	defaultBranch = main
[user]
	name = Ross
	email = rosszimmerle@gmail.com
	signkey = /Users/rosszimmerle/.ssh/id_ed25519.pub
	signingkey = /Users/rosszimmerle/.ssh/id_ed25519.pub
[gpg]
	format = ssh
	program = /opt/homebrew/bin/gpg
[commit]
  gpgsign = true
[core]
      pager = delta
      autocrlf = input
      fsmonitor = true
      untrackedCache = true

[pull]
      rebase = true

[push]
      default = simple
      autoSetupRemote = true

[delta]
      navigate = true
      line-numbers = true
      hyperlinks = true
      syntax-theme = Dracula

[interactive]
      diffFilter = delta --color-only

[diff]
      colorMoved = default

[merge]
      conflictstyle = zdiff3

[rebase]
      autoStash = true
      autoSquash = true
      updateRefs = true

[rerere]
      enabled = true

[fetch]
      prune = true
      pruneTags = true

[alias]
      st = status -sb
      lg = log --graph --decorate --oneline --all
      undo = reset --soft HEAD~1
      unstage = restore --staged
      fpush = push --force-with-lease
